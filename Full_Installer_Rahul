clear
echo "Starting HAPNodeJS Motion Eye and Dependency Installation"
sleep 1
clear
cd /home/pi
sudo wget https://goo.gl/CsTaCR -O hapinstaller_Rahul
sudo sh hapinstaller_Rahul
clear
echo "HAP Completed"
sleep 1
sudo wget https://goo.gl/qooJVQ -O motioneyePlugin_Rahul
sudo sh motioneyePlugin_Rahul
echo "Motion Eye installtion completed"
sleep 3

echo "forever instal"
sudo npm install forever -g
echo "forever install Ends"

echo "mosca mqtt Starts"
sudo npm install mosca --save
echo "mosca mqtt Ends"

echo "pi-gpio Starts"
wget abyz.co.uk/rpi/pigpio/pigpio.zip
unzip pigpio.zip
cd PIGPIO
make
sudo make install
npm install pigpio
echo "pi-gpio Ends"

echo "onpff Starts"
sudo npm install onoff
echo "onoff Ends"

echo "npm cmd Starts"
sudo npm install node-cmd
echo "npm cmd Ends"

echo "npm rebuild"
sudo npm rebuild
echo "npm rebuild completed"

